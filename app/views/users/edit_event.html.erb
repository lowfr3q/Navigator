<%= stylesheet_link_tag "Navigator.css" %>
<center>
<div class="add_event">
	
	<h2>Add New Event</h2>
	<br>

	<% if not @errors.nil? %>
		<h4> ERRORS: </h4>
		<ul>
		<% @errors.each do |err| %>
			<li><%= err %></li>
		<% end %>
		</ul>
	<% end %>
	<%= form_tag("/", method: "post") do %>
		<% label_tag(:title, "Title:") %>
		<%= text_field_tag(:title, @event.title, 
			placeholder: 'Event Name', :class => "input-field") %><br>
		<% label_tag(:start_time, "Start Time: ") %> 
		<%= text_field_tag(:start_time, @event.start_time, 
			placeholder: 'Start Time (e.g. 1200)', :class => "input-field") %><br>
		<% label_tag(:end_time, "End Time: ") %>
		<%= text_field_tag(:end_time, @event.end_time, 
			placeholder: 'End Time (e.g. 1430)', :class => "input-field") %><br>
		<%= text_field_tag(:address, @event.address,
			placeholder: 'Address', :class => "input-field") %><br><br>
		<%= hidden_field_tag(:event_id, @event.id) %>
		<%= submit_tag("Modify Event", :onclick => "this.form.action = '/users/submit_edited_event'", :class => "btn btn-lg btn-primary btn-block") %>
	<% end %>
	<br>
	
</div>
</center>
